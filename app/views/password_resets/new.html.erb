<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
    <div class="form-center">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      <div class="button">
      <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
